{
  "name": "Oscura Informed",
  "colors": {
    // Workbench: Basic editor colors
    "editor.background": "#26283E", // Main editor background (slate.120)
    "editor.foreground": "#F5F5F6", // Default text color (slate.5)
    "editorLineNumber.foreground": "#515362", // Line number color (slate.90)
    "editorLineNumber.activeForeground": "#F5F5F6", // Active line number color (slate.5)
    "editorGroupHeader.tabsBackground": "#26283E", // Editor group header background (slate.120)
    "editorWarning.foreground": "#F1B045", // Warning squiggles color (orange.100)
    "editorError.foreground": "#F05555", // Error squiggles color (red.100)

    // Selection and highlighting
    "editor.selectionBackground": "#8158C930", // Selected text background (purple.100 with opacity)
    "editor.selectionHighlightBackground": "#FFFFFF08", // Matching selection background
    "editor.wordHighlightBackground": "#8158C920", // Reference highlight background (purple.100 with opacity)
    "editor.wordHighlightStrongBackground": "#8158C920", // Write-access reference background
    "selection.background": "#656674", // General selection background (slate.80)

    // Diff editor
    "diffEditor.insertedTextBackground": "#35CE9915", // Added text background (green.100 with opacity)
    "diffEditor.insertedLineBackground": "#35CE9915", // Added line background
    "diffEditor.removedTextBackground": "#F0555515", // Removed text background (red.100 with opacity)
    "diffEditor.removedLineBackground": "#F0555515", // Removed line background

    // Editor gutter
    "editorGutter.addedBackground": "#35CE99", // Added line gutter indicator (green.100)
    "editorGutter.deletedBackground": "#F05555", // Deleted line gutter indicator (red.100)
    "editorGutter.modifiedBackground": "#8158C9", // Modified line gutter indicator (purple.100)

    // Sidebar and activity bar
    "sideBar.background": "#1E293B", // Sidebar background (slate.800)
    "sideBar.foreground": "#C5C5CA", // Sidebar text color (slate.30)
    "sideBarTitle.foreground": "#8B8C97", // Sidebar title color (slate.60)
    "sideBarSectionHeader.foreground": "#8B8C97", // Section header text (slate.60)
    "sideBarSectionHeader.background": "#1E293B", // Section header background (slate.800)

    // Activity bar
    "activityBar.background": "#343647", // Activity bar background (slate.darkSlate - deeper than original)
    "activityBar.foreground": "#9A79D4", // Activity bar icons (purple.80)
    "activityBarBadge.background": "#8158C9", // Badge background (purple.100) - matches company purple
    "activityBarBadge.foreground": "#F5F5F6", // Badge text (slate.5)

    // Title bar
    "titleBar.activeBackground": "#1E293B", // Active window title background (slate.800)
    "titleBar.inactiveBackground": "#1E293B", // Inactive window title background (slate.800)
    "titleBar.activeForeground": "#8B8C97", // Active window title text (slate.60)
    "titleBar.inactiveForeground": "#656674", // Inactive window title text (slate.80)

    // Tabs
    "tab.border": "#1E293B", // Tab border (slate.800)
    "tab.activeBackground": "#26283E", // Active tab background (slate.120)
    "tab.activeBorder": "#8158C9", // Active tab border (purple.100)
    "tab.activeForeground": "#F5F5F6", // Active tab text (slate.5)
    "tab.inactiveBackground": "#1E293B", // Inactive tab background (slate.800)

    // Status bar
    "statusBar.background": "#1E293B", // Status bar background (slate.800)
    "statusBar.foreground": "#9A79D4", // Status bar text (purple.80)
    "statusBar.noFolderBackground": "#26283E", // Status bar background when no folder is open (slate.120) - updated to match theme
    "statusBar.debuggingBackground": "#35CE99", // Debug mode background (green.100)
    "statusBar.debuggingForeground": "#F5F5F6", // Debug mode text (slate.5)
    "statusBarItem.remoteBackground": "#8158C9", // Remote indicator background (purple.100)
    "statusBarItem.remoteForeground": "#F5F5F6", // Remote indicator text (slate.5)

    // Global UI elements
    "badge.background": "#8158C9", // Badge background (purple.100)
    "badge.foreground": "#F5F5F6", // Badge text (slate.5)
    "button.background": "#8158C9", // Button background (purple.100)
    "button.hoverBackground": "#6439AF", // Button hover background (purple.120)
    "button.foreground": "#F5F5F6", // Button text (slate.5)
    "focusBorder": "#8158C9", // Focus border color (purple.100)

    // List and tree views
    "list.activeSelectionBackground": "#3E4051", // Selected item background (slate.100)
    "list.activeSelectionForeground": "#F5F5F6", // Selected item text (slate.5)
    "list.inactiveSelectionBackground": "#3E4051", // Inactive selection background (slate.100)
    "list.errorForeground": "#F05555", // Error item text (red.100)
    "list.warningForeground": "#F1B045", // Warning item text (orange.100)
    "list.hoverBackground": "#FFFFFF08", // Hover background
    "list.highlightForeground": "#9A79D4", // Search match highlight (purple.80)

    // Input controls
    "input.background": "#3E4051", // Input box background (slate.100)
    "input.foreground": "#F5F5F6", // Input text color (slate.5)
    "inputOption.activeForeground": "#F5F5F6", // Active input text (slate.5)

    // Bracket pairs
    "editorBracketHighlight.foreground1": "#9A79D4", // Bracket pair color 1 (purple.80)
    "editorBracketHighlight.foreground2": "#35CE99", // Bracket pair color 2 (green.100)
    "editorBracketHighlight.foreground3": "#8B8C97", // Bracket pair color 3 (slate.60)
    "editorBracketHighlight.foreground4": "#F1B045", // Bracket pair color 4 (orange.100)
    "editorBracketHighlight.foreground5": "#4D72CE", // Bracket pair color 5 (blue.100)
    "editorBracketHighlight.foreground6": "#F05555", // Bracket pair color 6 (red.100)
    "editorBracketHighlight.unexpectedBracket.foreground": "#F05555", // Mismatched bracket (red.100)

    // Links and tooltips
    "textLink.foreground": "#9A79D4", // Link text color (purple.80)
    "textLink.activeForeground": "#8158C9", // Active link color (purple.100)
    "editorHoverWidget.background": "#1E293B", // Hover tooltip background (slate.800)
    "editorHoverWidget.border": "#3E4051", // Hover tooltip border (slate.100)
    "editorHoverWidget.foreground": "#F5F5F6", // Hover tooltip text (slate.5)

    // Scrollbar
    "scrollbarSlider.background": "#51536280", // Scrollbar background (slate.90 with opacity)
    "scrollbarSlider.hoverBackground": "#515362", // Scrollbar hover background (slate.90)

    // Settings and Git
    "settings.modifiedItemIndicator": "#8158C9", // Modified setting indicator (purple.100)
    "gitDecoration.modifiedResourceForeground": "#9A79D4", // Modified file color (purple.80)
    "gitDecoration.untrackedResourceForeground": "#35CE99", // Untracked file color (green.100)

    // Quick input/Command palette
    "quickInput.background": "#3E4051", // Quick input background (slate.100)
    "quickInput.foreground": "#C5C5CA", // Quick input text (slate.30)
    "quickInputList.focusBackground": "#51536250", // Selected item background (slate.90 with opacity)
    "quickInputList.focusForeground": "#F5F5F6", // Selected item text (slate.5)
    "descriptionForeground": "#C5C5CA", // Description text (slate.30)
    "pickerGroup.foreground": "#C5C5CA" // Group label text (slate.30)
  },

  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#656674" // Comments (slate.80)
      }
    },
    {
      "name": "Variables",
      "scope": [
        "variable",
        "string constant.other.placeholder",
        "entity.name.tag"
      ],
      "settings": {
        "foreground": "#F5F5F6" // Variables (slate.5)
      }
    },
    {
      "name": "Colors",
      "scope": ["constant.other.color"],
      "settings": {
        "foreground": "#F5F5F6" // Color values (slate.5)
      }
    },
    {
      "name": "Invalid",
      "scope": ["invalid", "invalid.illegal"],
      "settings": {
        "foreground": "#F05555" // Invalid code (red.100)
      }
    },
    {
      "name": "Keyword, Storage",
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#9A79D4" // Keywords (purple.80) - lighter shade of company purple
      }
    },
    {
      "name": "Operator, Misc",
      "scope": [
        "keyword.control",
        "constant.other.color",
        "punctuation.definition.tag",
        "punctuation.separator.inheritance.php",
        "punctuation.definition.tag.html",
        "punctuation.definition.tag.begin.html",
        "punctuation.definition.tag.end.html",
        "punctuation.section.embedded",
        "keyword.other.template",
        "keyword.other.substitution"
      ],
      "settings": {
        "foreground": "#9A79D4" // Operators and control keywords (purple.80)
      }
    },
    {
      "name": "Tag",
      "scope": [
        "entity.name.tag",
        "meta.tag.sgml",
        "markup.deleted.git_gutter"
      ],
      "settings": {
        "foreground": "#8158C9" // HTML/XML tags (purple.100)
      }
    },
    {
      "name": "Function, Special Method",
      "scope": [
        "entity.name.function",
        "variable.function",
        "support.function",
        "keyword.other.special-method"
      ],
      "settings": {
        "foreground": "#35CE99" // Functions (green.100) - matches company green
      }
    },
    {
      "name": "Block Level Variables",
      "scope": ["meta.block variable.other"],
      "settings": {
        "foreground": "#F5F5F6" // Block variables (slate.5)
      }
    },
    {
      "name": "Other Variable, String Link",
      "scope": ["support.other.variable", "string.other.link"],
      "settings": {
        "foreground": "#F5F5F6" // Special variables (slate.5)
      }
    },
    {
      "name": "Number, Constant, Function Argument, Tag Attribute, Embedded",
      "scope": [
        "constant.numeric",
        "support.constant",
        "constant.character",
        "constant.escape",
        "keyword.other.unit",
        "keyword.other",
        "constant.language.boolean"
      ],
      "settings": {
        "foreground": "#F1B045" // Numbers and constants (orange.100)
      }
    },
    {
      "name": "String, Symbols, Inherited Class",
      "scope": [
        "string",
        "constant.other.symbol",
        "constant.other.key",
        "meta.group.braces.curly constant.other.object.key.js string.unquoted.label.js"
      ],
      "settings": {
        "foreground": "#35CE99" // Strings (green.100)
      }
    },
    {
      "name": "Class, Support",
      "scope": [
        "entity.name",
        "support.type",
        "support.class",
        "support.other.namespace.use.php",
        "meta.use.php",
        "support.other.namespace.php",
        "markup.changed.git_gutter",
        "support.type.sys-types"
      ],
      "settings": {
        "foreground": "#8158C9" // Class names (purple.100)
      }
    },
    {
      "name": "CSS Class and Support",
      "scope": [
        "source.css support.type.property-name",
        "source.sass support.type.property-name",
        "source.scss support.type.property-name",
        "source.less support.type.property-name",
        "source.stylus support.type.property-name",
        "source.postcss support.type.property-name",
        "source.postcss support.type.property-name",
        "support.type.vendored.property-name.css",
        "source.css.scss entity.name.tag",
        "variable.parameter.keyframe-list.css",
        "meta.property-name.css",
        "variable.parameter.url.scss",
        "meta.property-value.scss",
        "meta.property-value.css"
      ],
      "settings": {
        "foreground": "#C5C5CA" // CSS properties (slate.30)
      }
    },
    {
      "name": "Sub-methods",
      "scope": [
        "entity.name.module.js",
        "variable.import.parameter.js",
        "variable.other.class.js"
      ],
      "settings": {
        "foreground": "#F05555" // JS modules (red.100)
      }
    },
    {
      "name": "Language methods",
      "scope": ["variable.language"],
      "settings": {
        "foreground": "#9A79D4" // Language methods (purple.80)
      }
    },
    {
      "name": "entity.name.method.js",
      "scope": ["entity.name.method.js"],
      "settings": {
        "foreground": "#35CE99" // JS methods (green.100)
      }
    },
    {
      "name": "meta.method.js",
      "scope": [
        "meta.class-method.js entity.name.function.js",
        "variable.function.constructor"
      ],
      "settings": {
        "foreground": "#35CE99" // JS class methods (green.100)
      }
    },
    {
      "name": "Attributes",
      "scope": [
        "entity.other.attribute-name",
        "meta.property-list.scss",
        "meta.attribute-selector.scss",
        "meta.property-value.css",
        "entity.other.keyframe-offset.css",
        "meta.selector.css",
        "entity.name.tag.reference.scss",
        "entity.name.tag.nesting.css",
        "punctuation.separator.key-value.css"
      ],
      "settings": {
        "foreground": "#35CE99" // HTML/CSS attributes (green.100)
      }
    },
    {
      "name": "HTML Attributes",
      "scope": [
        "text.html.basic entity.other.attribute-name.html",
        "text.html.basic entity.other.attribute-name"
      ],
      "settings": {
        "foreground": "#9A79D4" // HTML attributes (purple.80)
      }
    },
    {
      "name": "CSS Classes",
      "scope": [
        "entity.other.attribute-name.class",
        "entity.other.attribute-name.id",
        "meta.attribute-selector.scss",
        "variable.parameter.misc.css"
      ],
      "settings": {
        "foreground": "#8158C9" // CSS classes (purple.100)
      }
    },
    {
      "name": "CSS ID's",
      "scope": ["source.sass keyword.control", "meta.attribute-selector.scss"],
      "settings": {
        "foreground": "#F5F5F6" // SASS controls (slate.5)
      }
    },
    {
      "name": "Inserted",
      "scope": ["markup.inserted"],
      "settings": {
        "foreground": "#35CE99" // Inserted content (green.100)
      }
    },
    {
      "name": "Deleted",
      "scope": ["markup.deleted"],
      "settings": {
        "foreground": "#F05555" // Deleted content (red.100)
      }
    },
    {
      "name": "Changed",
      "scope": ["markup.changed"],
      "settings": {
        "foreground": "#9A79D4" // Changed content (purple.80)
      }
    },
    {
      "name": "Regular Expressions",
      "scope": ["string.regexp"],
      "settings": {
        "foreground": "#35CE99" // Regex patterns (green.100)
      }
    },
    {
      "name": "Escape Characters",
      "scope": ["constant.character.escape"],
      "settings": {
        "foreground": "#9A79D4" // Escaped characters (purple.80)
      }
    },
    {
      "name": "URL",
      "scope": ["*url*", "*link*", "*uri*"],
      "settings": {
        "fontStyle": "underline",
        "foreground": "#4D72CE" // URLs (blue.100)
      }
    },
    {
      "name": "Decorators",
      "scope": [
        "tag.decorator.js entity.name.tag.js",
        "tag.decorator.js punctuation.definition.tag.js"
      ],
      "settings": {
        "foreground": "#35CE99" // JS decorators (green.100)
      }
    },
    {
      "name": "ES7 Bind Operator",
      "scope": [
        "source.js constant.other.object.key.js string.unquoted.label.js"
      ],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#F05555" // JS bind operator (red.100)
      }
    },
    {
      "name": "JSON Keys (All Levels)",
      "scope": ["support.type.property-name.json"],
      "settings": {
        "foreground": "#9A79D4" // JSON properties (purple.80)
      }
    },
    {
      "name": "Markdown - Plain",
      "scope": [
        "text.html.markdown",
        "punctuation.definition.list_item.markdown"
      ],
      "settings": {
        "foreground": "#F5F5F6" // Markdown text (slate.5)
      }
    },
    {
      "name": "Markdown - Markup Raw Inline",
      "scope": ["text.html.markdown markup.inline.raw.markdown"],
      "settings": {
        "foreground": "#9A79D4" // Markdown inline code (purple.80)
      }
    },
    {
      "name": "Markdown - Markup Raw Inline Punctuation",
      "scope": [
        "text.html.markdown markup.inline.raw.markdown punctuation.definition.raw.markdown"
      ],
      "settings": {
        "foreground": "#8B8C97" // Markdown inline code markers (slate.60)
      }
    },
    {
      "name": "Markdown - Heading",
      "scope": [
        "markdown.heading",
        "markup.heading | markup.heading entity.name",
        "markup.heading.markdown punctuation.definition.heading.markdown",
        "markup.heading",
        "markup.inserted.git_gutter"
      ],
      "settings": {
        "foreground": "#8158C9" // Markdown headings (purple.100)
      }
    },
    {
      "name": "Markup - Italic",
      "scope": ["markup.italic"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#F5F5F6" // Markdown italic (slate.5)
      }
    },
    {
      "name": "Markup - Bold",
      "scope": ["markup.bold", "markup.bold string"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#F5F5F6" // Markdown bold (slate.5)
      }
    },
    {
      "name": "Markup - Bold-Italic",
      "scope": [
        "markup.bold markup.italic",
        "markup.italic markup.bold",
        "markup.quote markup.bold",
        "markup.bold markup.italic string",
        "markup.italic markup.bold string",
        "markup.quote markup.bold string"
      ],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#F5F5F6" // Markdown bold-italic (slate.5)
      }
    },
    {
      "name": "Markup - Underline",
      "scope": ["markup.underline"],
      "settings": {
        "fontStyle": "underline",
        "foreground": "#35CE99" // Markdown underline (green.100)
      }
    },
    {
      "name": "Markdown - Blockquote",
      "scope": ["markup.quote punctuation.definition.blockquote.markdown"],
      "settings": {
        "foreground": "#8B8C97" // Markdown blockquote markers (slate.60)
      }
    },
    {
      "name": "Markup - Quote",
      "scope": ["markup.quote"],
      "settings": {
        "foreground": "#C5C5CA" // Markdown quotes (slate.30)
      }
    },
    {
      "name": "Markdown - Link",
      "scope": ["string.other.link.title.markdown"],
      "settings": {
        "foreground": "#9A79D4" // Markdown links (purple.80)
      }
    },
    {
      "name": "Markdown - Link Description",
      "scope": ["string.other.link.description.title.markdown"],
      "settings": {
        "foreground": "#8158C9" // Markdown link descriptions (purple.100)
      }
    },
    {
      "name": "Markdown - Link Anchor",
      "scope": ["constant.other.reference.link.markdown"],
      "settings": {
        "foreground": "#35CE99" // Markdown link references (green.100)
      }
    },
    {
      "name": "Markup - Raw Block",
      "scope": ["markup.raw.block"],
      "settings": {
        "foreground": "#9A79D4" // Markdown code blocks (purple.80)
      }
    },
    {
      "name": "Markdown - Raw Block Fenced",
      "scope": ["markup.raw.block.fenced.markdown"],
      "settings": {
        "foreground": "#C5C5CA" // Markdown fenced code blocks (slate.30)
      }
    },
    {
      "name": "Markdown - Fenced Bode Block",
      "scope": ["punctuation.definition.fenced.markdown"],
      "settings": {
        "foreground": "#656674" // Markdown fenced code markers (slate.80)
      }
    },
    {
      "name": "Markdown - Fenced Bode Block Variable",
      "scope": [
        "markup.raw.block.fenced.markdown",
        "variable.language.fenced.markdown",
        "punctuation.section.class.end"
      ],
      "settings": {
        "foreground": "#F5F5F6" // Markdown fenced code content (slate.5)
      }
    },
    {
      "name": "Markdown - Fenced Language",
      "scope": ["variable.language.fenced.markdown"],
      "settings": {
        "foreground": "#8158C9" // Markdown language identifiers (purple.100)
      }
    },
    {
      "name": "Markdown - Separator",
      "scope": ["meta.separator"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#8B8C97" // Markdown separators (slate.60)
      }
    },
    {
      "name": "Markup - Table",
      "scope": ["markup.table"],
      "settings": {
        "foreground": "#F5F5F6" // Markdown tables (slate.5)
      }
    },
    {
      "name": "Brackets",
      "scope": [
        "meta.brace",
        "punctuation.definition.block",
        "punctuation.definition.parameters",
        "punctuation.section.function",
        "meta.brackets",
        "punctuation.definition.brackets",
        "punctuation.definition.dictionary",
        "punctuation.definition.array",
        "punctuation.section",
        "punctuation.section.block",
        "punctuation.section.braces",
        "punctuation.section.group",
        "punctuation.section.parameters"
      ],
      "settings": {
        "foreground": "#8B8C97" // Brackets and delimiters (slate.60)
      }
    }
  ]
}
