{
  "name": "Oscura",
  // -------------------------------------------------------------------------
  // Workbench UI Colors (Controls the visual styling of the UI elements)
  // -------------------------------------------------------------------------
  "colors": {
    // Workbench: Basic editor colors
    "editor.background": "#0B0B0F",                    // Main editor background
    "editor.foreground": "#E6E6E6",                    // Default text color
    "editorLineNumber.foreground": "#32333B",          // Line number color
    "editorLineNumber.activeForeground": "#E6E6E6",    // Active line number color
    "editorGroupHeader.tabsBackground": "#0B0B0F",     // Editor group header background
    "editorWarning.foreground": "#FF5C5C",             // Warning squiggles color
    "editorError.foreground": "#FF5C5C",               // Error squiggles color

    // Selection and highlighting
    "editor.selectionBackground": "#EAEC8A16",         // Selected text background
    "editor.selectionHighlightBackground": "#FFFFFF08", // Matching selection background
    "editor.wordHighlightBackground": "#EAEC8A21",     // Reference highlight background
    "editor.wordHighlightStrongBackground": "#EAEC8A21", // Write-access reference background
    "selection.background": "#5A5B63",                 // General selection background

    // Diff editor
    "diffEditor.insertedTextBackground": "#E6E6E615",  // Added text background
    "diffEditor.insertedLineBackground": "#E6E6E615",  // Added line background
    "diffEditor.removedTextBackground": "#D84F6815",   // Removed text background
    "diffEditor.removedLineBackground": "#D84F6815",   // Removed line background

    // Editor gutter
    "editorGutter.addedBackground": "#E6E6E6",         // Added line gutter indicator
    "editorGutter.deletedBackground": "#D84F68",       // Deleted line gutter indicator
    "editorGutter.modifiedBackground": "#E6E7A3",      // Modified line gutter indicator

    // Sidebar and activity bar
    "sideBar.background": "#0B0B0F",                   // Sidebar background
    "sideBar.foreground": "#C1C1C1",                   // Sidebar text color
    "sideBarTitle.foreground": "#9592A4",              // Sidebar title color
    "sideBarSectionHeader.foreground": "#9592A4",      // Section header text
    "sideBarSectionHeader.background": "#0B0B0F",      // Section header background
    
    // Activity bar
    "activityBar.background": "#0B0B0F",               // Activity bar background
    "activityBar.foreground": "#9592A4",               // Activity bar icons
    "activityBarBadge.background": "#E6E7A3",          // Badge background
    "activityBarBadge.foreground": "#000",             // Badge text

    // Title bar
    "titleBar.activeBackground": "#0B0B0F",            // Active window title background
    "titleBar.inactiveBackground": "#0B0B0F",          // Inactive window title background
    "titleBar.activeForeground": "#7E7E7E",            // Active window title text
    "titleBar.inactiveForeground": "#6A7782",          // Inactive window title text

    // Tabs
    "tab.border": "#0B0B0F",                          // Tab border
    "tab.activeBackground": "#0B0B0F",                // Active tab background
    "tab.activeBorder": "#E6E6E670",                  // Active tab border
    "tab.activeForeground": "#FFF",                   // Active tab text
    "tab.inactiveBackground": "#0B0B0F",              // Inactive tab background

    // Status bar
    "statusBar.background": "#0B0B0F",                // Status bar background
    "statusBar.foreground": "#9592A4",                // Status bar text
    "statusBar.debuggingBackground": "#4EBE96",       // Debug mode background
    "statusBar.debuggingForeground": "#E6E6E6",       // Debug mode text
    "statusBarItem.remoteBackground": "#E6E7A3",      // Remote indicator background
    "statusBarItem.remoteForeground": "#000",         // Remote indicator text

    // Global UI elements
    "badge.background": "#D6D876",                    // Badge background
    "badge.foreground": "#000",                       // Badge text
    "button.background": "#E6E7A3",                   // Button background
    "button.hoverBackground": "#D6D876",              // Button hover background
    "button.foreground": "#000",                      // Button text
    "focusBorder": "#E6E7A3",                        // Focus border color

    // List and tree views
    "list.activeSelectionBackground": "#232323",      // Selected item background
    "list.activeSelectionForeground": "#E6E6E6",      // Selected item text
    "list.inactiveSelectionBackground": "#232323",    // Inactive selection background
    "list.errorForeground": "#FFF",                   // Error item text
    "list.warningForeground": "#FFA16C",             // Warning item text
    "list.hoverBackground": "#FFFFFF08",             // Hover background
    "list.highlightForeground": "#FFF",              // Search match highlight

    // Input controls
    "input.background": "#27282A",                    // Input box background
    "input.foreground": "#E6E6E6",                    // Input text color
    "inputOption.activeForeground": "#FFF",           // Active input text

    // Bracket pairs
    "editorBracketHighlight.foreground1": "#5C6974",  // Bracket pair color 1
    "editorBracketHighlight.foreground2": "#6E678E",  // Bracket pair color 2
    "editorBracketHighlight.foreground3": "#6A7782",  // Bracket pair color 3
    "editorBracketHighlight.foreground4": "#6A7782",  // Bracket pair color 4
    "editorBracketHighlight.foreground5": "#6A7782",  // Bracket pair color 5
    "editorBracketHighlight.foreground6": "#6A7782",  // Bracket pair color 6
    "editorBracketHighlight.unexpectedBracket.foreground": "#6A7782", // Mismatched bracket

    // Links and tooltips
    "textLink.foreground": "#479FFA",                 // Link text color
    "textLink.activeForeground": "#479FFA",           // Active link color
    "editorHoverWidget.background": "#161616",        // Hover tooltip background
    "editorHoverWidget.border": "#282828",            // Hover tooltip border
    "editorHoverWidget.foreground": "#E6E6E6",        // Hover tooltip text

    // Scrollbar
    "scrollbarSlider.background": "#34343480",        // Scrollbar background
    "scrollbarSlider.hoverBackground": "#343434",     // Scrollbar hover background

    // Settings and Git
    "settings.modifiedItemIndicator": "#E6E7A3",      // Modified setting indicator
    "gitDecoration.modifiedResourceForeground": "#FFF", // Modified file color
    "gitDecoration.untrackedResourceForeground": "#FFF", // Untracked file color

    // Quick input/Command palette
    "quickInput.background": "#27282A",               // Quick input background
    "quickInput.foreground": "#C1C1C1",               // Quick input text
    "quickInputList.focusBackground": "#FFFFFF16",    // Selected item background
    "quickInputList.focusForeground": "#FFF",         // Selected item text
    "descriptionForeground": "#C1C1C1",               // Description text
    "pickerGroup.foreground": "#C1C1C1"               // Group label text
  },
  
  // -------------------------------------------------------------------------
  // Syntax Highlighting (Defines colors and styles for code syntax and tokens)
  // -------------------------------------------------------------------------
  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#46474F" // Dark gray for all code comments (// and /* */)
      }
    },
    {
      "name": "Variables",
      "scope": [
        "variable",
        "string constant.other.placeholder",
        "entity.name.tag"
      ],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for variables and placeholders
      }
    },
    {
      "name": "Colors",
      "scope": ["constant.other.color"],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for color values in code
      }
    },
    {
      "name": "Invalid",
      "scope": ["invalid", "invalid.illegal"],
      "settings": {
        "foreground": "#D84F68" // Red for invalid or illegal code constructs
      }
    },
    {
      "name": "Keyword, Storage",
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#9099A1" // Grayish for keywords like const, let, var, function, class
      }
    },
    {
      "name": "Operator, Misc",
      "scope": [
        "keyword.control",
        "constant.other.color",
        "punctuation.definition.tag",
        "punctuation.separator.inheritance.php",
        "punctuation.definition.tag.html",
        "punctuation.definition.tag.begin.html",
        "punctuation.definition.tag.end.html",
        "punctuation.section.embedded",
        "keyword.other.template",
        "keyword.other.substitution"
      ],
      "settings": {
        "foreground": "#9099A1" // Grayish for operators, control keywords (if, for, while) and HTML tag markers
      }
    },
    {
      "name": "Tag",
      "scope": [
        "entity.name.tag",
        "meta.tag.sgml",
        "markup.deleted.git_gutter"
      ],
      "settings": {
        "foreground": "#E6E7A3" // Light yellow for HTML/XML tags and deleted Git content
      }
    },
    {
      "name": "Function, Special Method",
      "scope": [
        "entity.name.function",
        "variable.function",
        "support.function",
        "keyword.other.special-method"
      ],
      "settings": {
        "foreground": "#E6E7A3" // Light yellow for function names and special methods
      }
    },
    {
      "name": "Block Level Variables",
      "scope": ["meta.block variable.other"],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for variables defined within blocks
      }
    },
    {
      "name": "Other Variable, String Link",
      "scope": ["support.other.variable", "string.other.link"],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for special variables and link strings
      }
    },
    {
      "name": "Number, Constant, Function Argument, Tag Attribute, Embedded",
      "scope": [
        "constant.numeric",
        "support.constant",
        "constant.character",
        "constant.escape",
        "keyword.other.unit",
        "keyword.other",
        "constant.language.boolean"
      ],
      "settings": {
        "foreground": "#F9B98C" // Peachy color for numbers, constants, and CSS values
      }
    },
    {
      "name": "String, Symbols, Inherited Class",
      "scope": [
        "string",
        "constant.other.symbol",
        "constant.other.key",
        "meta.group.braces.curly constant.other.object.key.js string.unquoted.label.js"
      ],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for strings and symbol definitions
      }
    },
    {
      "name": "Class, Support",
      "scope": [
        "entity.name",
        "support.type",
        "support.class",
        "support.other.namespace.use.php",
        "meta.use.php",
        "support.other.namespace.php",
        "markup.changed.git_gutter",
        "support.type.sys-types"
      ],
      "settings": {
        "foreground": "#E6E7A3" // Light yellow for class names and support types
      }
    },
    {
      "name": "CSS Class and Support",
      "scope": [
        "source.css support.type.property-name",
        "source.sass support.type.property-name",
        "source.scss support.type.property-name",
        "source.less support.type.property-name",
        "source.stylus support.type.property-name",
        "source.postcss support.type.property-name",
        "source.postcss support.type.property-name",
        "support.type.vendored.property-name.css",
        "source.css.scss entity.name.tag",
        "variable.parameter.keyframe-list.css",
        "meta.property-name.css",
        "variable.parameter.url.scss",
        "meta.property-value.scss",
        "meta.property-value.css"
      ],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for CSS properties and values
      }
    },
    {
      "name": "Sub-methods",
      "scope": [
        "entity.name.module.js",
        "variable.import.parameter.js",
        "variable.other.class.js"
      ],
      "settings": {
        "foreground": "#D84F68" // Red for JavaScript module and import names
      }
    },
    {
      "name": "Language methods",
      "scope": ["variable.language"],
      "settings": {
        "foreground": "#9592A4" // Muted purple for language-specific methods (this, super, etc)
      }
    },
    {
      "name": "entity.name.method.js",
      "scope": ["entity.name.method.js"],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for JavaScript method names
      }
    },
    {
      "name": "meta.method.js",
      "scope": [
        "meta.class-method.js entity.name.function.js",
        "variable.function.constructor"
      ],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for JavaScript class methods and constructors
      }
    },
    {
      "name": "Attributes",
      "scope": [
        "entity.other.attribute-name",
        "meta.property-list.scss",
        "meta.attribute-selector.scss",
        "meta.property-value.css",
        "entity.other.keyframe-offset.css",
        "meta.selector.css",
        "entity.name.tag.reference.scss",
        "entity.name.tag.nesting.css",
        "punctuation.separator.key-value.css"
      ],
      "settings": {
        "foreground": "#54C0A3" // Teal color for HTML attributes and CSS/SCSS selectors and properties
      }
    },
    {
      "name": "HTML Attributes",
      "scope": [
        "text.html.basic entity.other.attribute-name.html",
        "text.html.basic entity.other.attribute-name"
      ],
      "settings": {
        "foreground": "#E6E7A3" // Light yellow for HTML attribute names
      }
    },
    {
      "name": "CSS Classes",
      "scope": [
        "entity.other.attribute-name.class",
        "entity.other.attribute-name.id",
        "meta.attribute-selector.scss",
        "variable.parameter.misc.css"
      ],
      "settings": {
        "foreground": "#E6E7A3" // Light yellow for CSS class and ID selectors
      }
    },
    {
      "name": "CSS ID's",
      "scope": ["source.sass keyword.control", "meta.attribute-selector.scss"],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for SASS control keywords and attribute selectors
      }
    },
    {
      "name": "Inserted",
      "scope": ["markup.inserted"],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for inserted content in diffs
      }
    },
    {
      "name": "Deleted",
      "scope": ["markup.deleted"],
      "settings": {
        "foreground": "#D84F68" // Red for deleted content in diffs
      }
    },
    {
      "name": "Changed",
      "scope": ["markup.changed"],
      "settings": {
        "foreground": "#9592A4" // Muted purple for modified content in diffs
      }
    },
    {
      "name": "Regular Expressions",
      "scope": ["string.regexp"],
      "settings": {
        "foreground": "#9592A4" // Muted purple for regex patterns
      }
    },
    {
      "name": "Escape Characters",
      "scope": ["constant.character.escape"],
      "settings": {
        "foreground": "#9592A4" // Muted purple for escaped characters
      }
    },
    {
      "name": "URL",
      "scope": ["*url*", "*link*", "*uri*"],
      "settings": {
        "fontStyle": "underline",
        "foreground": "#479FFA" // Bright blue for URLs and links
      }
    },
    {
      "name": "Decorators",
      "scope": [
        "tag.decorator.js entity.name.tag.js",
        "tag.decorator.js punctuation.definition.tag.js"
      ],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for JavaScript decorators
      }
    },
    {
      "name": "ES7 Bind Operator",
      "scope": [
        "source.js constant.other.object.key.js string.unquoted.label.js"
      ],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#D84F68" // Red for JavaScript bind operator
      }
    },
    {
      "name": "JSON Keys (All Levels)",
      "scope": ["support.type.property-name.json"],
      "settings": {
        "foreground": "#E6E7A3" // Light yellow for all JSON property names
      }
    },
    {
      "name": "Markdown - Plain",
      "scope": [
        "text.html.markdown",
        "punctuation.definition.list_item.markdown"
      ],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for basic markdown text and list items
      }
    },
    {
      "name": "Markdown - Markup Raw Inline",
      "scope": ["text.html.markdown markup.inline.raw.markdown"],
      "settings": {
        "foreground": "#9592A4" // Muted purple for inline code in markdown
      }
    },
    {
      "name": "Markdown - Markup Raw Inline Punctuation",
      "scope": [
        "text.html.markdown markup.inline.raw.markdown punctuation.definition.raw.markdown"
      ],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for inline code markers (backticks)
      }
    },
    {
      "name": "Markdown - Heading",
      "scope": [
        "markdown.heading",
        "markup.heading | markup.heading entity.name",
        "markup.heading.markdown punctuation.definition.heading.markdown",
        "markup.heading",
        "markup.inserted.git_gutter"
      ],
      "settings": {
        "foreground": "#E6E7A3" // Light yellow for markdown headings
      }
    },
    {
      "name": "Markup - Italic",
      "scope": ["markup.italic"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#E6E6E6" // Light gray italic text for markdown emphasis
      }
    },
    {
      "name": "Markup - Bold",
      "scope": ["markup.bold", "markup.bold string"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#E6E6E6" // Light gray bold text for markdown strong emphasis
      }
    },
    {
      "name": "Markup - Bold-Italic",
      "scope": [
        "markup.bold markup.italic",
        "markup.italic markup.bold",
        "markup.quote markup.bold",
        "markup.bold markup.italic string",
        "markup.italic markup.bold string",
        "markup.quote markup.bold string"
      ],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#E6E6E6" // Light gray bold-italic text for combined emphasis
      }
    },
    {
      "name": "Markup - Underline",
      "scope": ["markup.underline"],
      "settings": {
        "fontStyle": "underline",
        "foreground": "#E6E7A3" // Light yellow underlined text
      }
    },
    {
      "name": "Markdown - Blockquote",
      "scope": ["markup.quote punctuation.definition.blockquote.markdown"],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for blockquote markers
      }
    },
    {
      "name": "Markup - Quote",
      "scope": ["markup.quote"],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for quoted text
      }
    },
    {
      "name": "Markdown - Link",
      "scope": ["string.other.link.title.markdown"],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for link text
      }
    },
    {
      "name": "Markdown - Link Description",
      "scope": ["string.other.link.description.title.markdown"],
      "settings": {
        "foreground": "#9592A4" // Muted purple for link descriptions
      }
    },
    {
      "name": "Markdown - Link Anchor",
      "scope": ["constant.other.reference.link.markdown"],
      "settings": {
        "foreground": "#E6E7A3" // Light yellow for link references
      }
    },
    {
      "name": "Markup - Raw Block",
      "scope": ["markup.raw.block"],
      "settings": {
        "foreground": "#9592A4" // Muted purple for code blocks
      }
    },
    {
      "name": "Markdown - Raw Block Fenced",
      "scope": ["markup.raw.block.fenced.markdown"],
      "settings": {
        "foreground": "#00000050" // Semi-transparent black for fenced code block backgrounds
      }
    },
    {
      "name": "Markdown - Fenced Bode Block",
      "scope": ["punctuation.definition.fenced.markdown"],
      "settings": {
        "foreground": "#00000050" // Semi-transparent black for fenced code block markers
      }
    },
    {
      "name": "Markdown - Fenced Bode Block Variable",
      "scope": [
        "markup.raw.block.fenced.markdown",
        "variable.language.fenced.markdown",
        "punctuation.section.class.end"
      ],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for fenced code block content
      }
    },
    {
      "name": "Markdown - Fenced Language",
      "scope": ["variable.language.fenced.markdown"],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for language identifiers in fenced code blocks
      }
    },
    {
      "name": "Markdown - Separator",
      "scope": ["meta.separator"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#65737E" // Muted blue-gray for markdown separators
      }
    },
    {
      "name": "Markup - Table",
      "scope": ["markup.table"],
      "settings": {
        "foreground": "#E6E6E6" // Light gray for markdown tables
      }
    },
    {
      "name": "Brackets",
      "scope": [
        "meta.brace",
        "punctuation.definition.block",
        "punctuation.definition.parameters",
        "punctuation.section.function",
        "meta.brackets",
        "punctuation.definition.brackets",
        "punctuation.definition.dictionary",
        "punctuation.definition.array",
        "punctuation.section",
        "punctuation.section.block",
        "punctuation.section.braces",
        "punctuation.section.group",
        "punctuation.section.parameters"
      ],
      "settings": {
        "foreground": "#5C6974" // Dark gray for all types of brackets and delimiters
      }
    }
  ]
}